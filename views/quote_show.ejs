<% include ./partials/_head %>
<div class="container">
    <h1>Edit Quote</h1>

    <form method="post" action="/quotes/<%= quote.id %>?_method=PUT">
    <div class="form-group">
      <div style="width: 20em;">
        <input
          style="width: 100%"
          type="text"
          name="quote"
          id="quote"
          value="<%= quote.quote %>">
      </div>
      

        <input type="submit" class="btn btn-primary" value="Update" />
      </div>
    </form>
    </div>
  </body>
</html>
